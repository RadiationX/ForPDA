<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/drawer_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawer_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_toStartOf="@+id/drawer_item_count"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="0dp"
            android:paddingTop="8dp"
            tools:text="@string/test_drawer_item_name"
            android:textColor="?attr/default_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/drawer_item_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawer_item_count"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="@dimen/dp16"
            android:background="?count_background"
            android:gravity="center"
            android:minWidth="24dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            tools:text="@string/test_count_number"
            android:textColor="?attr/contrast_text_color"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>