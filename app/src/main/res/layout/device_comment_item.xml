<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_block_about"
    style="@style/CardStyle.Item.Wide"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/item_date"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp16"
                android:paddingStart="@dimen/dp16"
                android:text="@string/profile_title_about"
                android:textColor="?attr/default_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp16"
                android:paddingStart="@dimen/dp16"
                android:text="@string/test_topic_date"
                android:textColor="?attr/second_text_color"
                android:textSize="14sp" />
        </RelativeLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingBottom="16dp"
            android:paddingEnd="@dimen/dp16"
            android:paddingStart="16dp"
            android:text="ajskldjklasjdlkajls;kjdklk;asd"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/item_dislike_btn"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_thumb_down"
                android:enabled="false"
                android:minWidth="48dp"
                android:text="1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/item_like_btn"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/item_dislike_btn"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_thumb_up"
                android:enabled="false"
                android:minWidth="48dp"
                android:text="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_rating"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="?count_background"
                android:gravity="center"
                android:minWidth="32dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:text="10"
                android:textColor="?attr/contrast_text_color"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>