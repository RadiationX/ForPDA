<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:paddingBottom="@dimen/dp12"
    android:paddingEnd="@dimen/dp16"
    android:paddingStart="@dimen/dp16"
    android:paddingTop="@dimen/dp12">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/topic_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/icons_block"
        android:textSize="16sp"
        android:text="@string/test_topic_title"/>

    <LinearLayout
        android:id="@+id/icons_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="2dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/topic_item_poll_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_poll_gray_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/topic_item_pin_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_pin_gray_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/topic_item_lock_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_lock_black_24dp" />
        <View
            android:id="@+id/topic_item_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/topic_item_dot"
            android:visibility="gone"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/topic_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_item_title"
        android:textColor="@color/light_text_second_color"
        android:textSize="14sp"
        android:text="@string/test_topic_description"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/topic_item_last_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_item_desc"
        android:textColor="@color/light_text_second_color"
        android:text="@string/test_topic_last_nick"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/topic_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/topic_item_desc"
        android:textColor="@color/light_text_second_color"
        android:text="@string/test_topic_date"/>

</RelativeLayout>