<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/qms_theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/qms_theme_count"
        android:text="@string/test_topic_title"
        android:textColor="@color/light_text_color" />

    <TextView
        android:id="@+id/qms_theme_count"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:minWidth="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:background="@drawable/qms_count_background"
        android:textColor="@color/light_contrast_text_color"
        android:textStyle="bold"
        android:text="@string/test_count_number" />

</RelativeLayout>