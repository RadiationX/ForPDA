<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightAppTheme.NoActionBar" parent="LightAppTheme.NoActionBarBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DarkAppTheme.NoActionBar" parent="DarkAppTheme.NoActionBarBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="PreferenceAppThemeLight" parent="LightAppTheme">
        <item name="android:statusBarColor">@color/light_colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="PreferenceAppThemeDark" parent="DarkAppTheme">
        <item name="android:statusBarColor">@color/dark_colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>