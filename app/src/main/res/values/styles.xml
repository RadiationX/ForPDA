<resources>
    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">16dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>
    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#aaa</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ProfileToolbarTextStyle">@style/ProfileToolbarTextStyle</item>
        <item name="ProfileCardStyle">@style/ProfileCardStyle</item>
        <item name="ProfileCardTitleStyle">@style/ProfileCardTitleStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="actionModeStyle">@style/ActionModeStyle</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="actionModeCloseButtonStyle">@style/myclosebutton</item>
    </style>

    <style name="myclosebutton" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">#757575</item> <!-- whatever color -->
    </style>

    <style name="BaseAppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog"/>

    <style name="AppTheme.BottomSheetDialog" parent="BaseAppTheme.BottomSheetDialog"/>

    <style name="BaseAppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:singleLine">true</item>
    </style>

    <style name="BaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="BaseAppTheme.AppBarOverlay" />

    <style name="AppTheme.PopupOverlay" parent="BaseAppTheme.PopupOverlay">
        <item name="elevation">0dp</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BaseAppTheme.Settings">

    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>
    <style name="AppTheme.NoActionBar" parent="BaseAppTheme.NoActionBar"/>

    <style name="ProfileToolbarTextStyle">
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#4c000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileCardStyle" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>

    </style>

    <style name="ProfileCardTitleStyle">

    </style>

    <style name="QuoteTitleTextStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SpoilerTitleTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AUTH" parent="AppTheme">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>
