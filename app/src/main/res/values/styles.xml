<resources>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!--
        LIGHT THEME
    -->
    <style name="LightAppTheme" parent="Theme.AppCompat.Light">
        <!-- Base color settings-->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>

        <!-- Colors attr settings-->
        <item name="status_bar_color">@color/light_status_bar_color</item>
        <item name="link_color">@color/light_link_color</item>
        <item name="link_color_contrast">@color/light_link_color_contrast</item>
        <item name="default_text_color">@color/light_default_text_color</item>
        <item name="contrast_text_color">@color/light_contrast_text_color</item>
        <item name="second_text_color">@color/light_second_text_color</item>
        <item name="drawer_item_text">@color/light_drawer_item_text</item>
        <item name="drawer_item_text_selected">@color/light_drawer_item_text_selected</item>
        <item name="background_base">@color/light_background_base</item>
        <item name="background_for_cards">@color/light_background_for_cards</item>
        <item name="background_for_lists">@color/light_background_for_lists</item>
        <item name="divider_line">@color/light_divider_line</item>
        <item name="attachment_overlay_bg">@color/light_attachment_overlay_bg</item>
        <item name="attachment_description_bg">@color/light_attachment_description_bg</item>
        <item name="msg_panel_tooltip_bg">@color/light_msg_panel_tooltip_bg</item>
        <item name="profile_overlay_bg">@color/light_profile_overlay_bg</item>
        <item name="img_viewer_toolbar">@color/light_img_viewer_toolbar</item>
        <item name="icon_base">@color/light_icon_base</item>
        <item name="icon_base_inverse">@color/light_icon_base_inverse</item>
        <item name="icon_toolbar">@color/light_icon_toolbar</item>
        <item name="icon_toolbar_inverse">@color/light_icon_toolbar_inverse</item>
        <item name="count_background">@drawable/count_background_light</item>
        <item name="cards_background">@color/light_card_background</item>

        <!-- Styles settings-->
        <item name="app_bar_overlay">@style/LightAppTheme.AppBarOverlay</item>
        <item name="popup_overlay">@style/LightAppTheme.PopupOverlay</item>
        <item name="bottom_sheet_dialog_theme">@style/LightAppTheme.BottomSheetDialog</item>

        <!-- Other settings -->
        <item name="ProfileToolbarTextStyle">@style/ProfileToolbarTextStyle</item>
        <item name="CardStyle">@style/CardStyle</item>
        <item name="ProfileCardTitleStyle">@style/ProfileCardTitleStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="actionModeStyle">@style/ActionModeStyle</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="actionModeBackground">@color/light_colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeCloseButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="alertDialogTheme">@style/LightAppTheme.Dialog</item>
        <item name="android:windowBackground">@color/light_background_base</item>
    </style>

    <style name="LightAppTheme.Dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/light_card_background</item>
    </style>

    <style name="LightAppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/light_card_background</item>-->
    </style>

    <style name="LightAppTheme.Settings" parent="LightAppTheme" />

    <style name="LightAppTheme.NoActionBarBase" parent="LightAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightAppTheme.NoActionBar" parent="LightAppTheme.NoActionBarBase" />

    <style name="LightAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:singleLine">true</item>
    </style>

    <style name="LightAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="elevation">0dp</item>
    </style>


    <!--
        DARK THEME
    -->
    <style name="DarkAppTheme" parent="Theme.AppCompat">
        <!-- Base color settings-->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>

        <!-- Colors attr settings-->
        <item name="status_bar_color">@color/dark_status_bar_color</item>
        <item name="link_color">@color/dark_link_color</item>
        <item name="link_color_contrast">@color/dark_link_color_contrast</item>
        <item name="default_text_color">@color/dark_default_text_color</item>
        <item name="contrast_text_color">@color/dark_contrast_text_color</item>
        <item name="second_text_color">@color/dark_second_text_color</item>
        <item name="drawer_item_text">@color/dark_drawer_item_text</item>
        <item name="drawer_item_text_selected">@color/dark_drawer_item_text_selected</item>
        <item name="background_base">@color/dark_background_base</item>
        <item name="background_for_cards">@color/dark_background_for_cards</item>
        <item name="background_for_lists">@color/dark_background_for_lists</item>
        <item name="divider_line">@color/dark_divider_line</item>
        <item name="attachment_overlay_bg">@color/dark_attachment_overlay_bg</item>
        <item name="attachment_description_bg">@color/dark_attachment_description_bg</item>
        <item name="msg_panel_tooltip_bg">@color/dark_msg_panel_tooltip_bg</item>
        <item name="profile_overlay_bg">@color/dark_profile_overlay_bg</item>
        <item name="img_viewer_toolbar">@color/dark_img_viewer_toolbar</item>
        <item name="icon_base">@color/dark_icon_base</item>
        <item name="icon_base_inverse">@color/dark_icon_base_inverse</item>
        <item name="icon_toolbar">@color/dark_icon_toolbar</item>
        <item name="icon_toolbar_inverse">@color/dark_icon_toolbar_inverse</item>
        <item name="count_background">@drawable/count_background_dark</item>
        <item name="cards_background">@color/dark_card_background</item>


        <!-- Styles settings-->
        <item name="app_bar_overlay">@style/DarkAppTheme.AppBarOverlay</item>
        <item name="popup_overlay">@style/DarkAppTheme.PopupOverlay</item>
        <item name="bottom_sheet_dialog_theme">@style/DarkAppTheme.BottomSheetDialog</item>

        <!-- Other settings -->
        <item name="ProfileToolbarTextStyle">@style/ProfileToolbarTextStyle</item>
        <item name="CardStyle">@style/CardStyle</item>
        <item name="ProfileCardTitleStyle">@style/ProfileCardTitleStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="actionModeStyle">@style/ActionModeStyle</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="actionModeBackground">@color/dark_colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeCloseButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="alertDialogTheme">@style/DarkAppTheme.Dialog</item>
        <item name="android:windowBackground">@color/dark_background_base</item>
    </style>

    <style name="DarkAppTheme.Dialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:colorBackground">@color/dark_card_background</item>
    </style>

    <style name="DarkAppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <!--<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/dark_card_background</item>-->
    </style>

    <style name="DarkAppTheme.Settings" parent="DarkAppTheme" />

    <style name="DarkAppTheme.NoActionBarBase" parent="DarkAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkAppTheme.NoActionBar" parent="DarkAppTheme.NoActionBarBase" />

    <style name="DarkAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:singleLine">true</item>
    </style>

    <style name="DarkAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="elevation">0dp</item>
    </style>


    <!-- OTHER -->
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?icon_toolbar</item>
    </style>

    <style name="actionModeCloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">?icon_toolbar</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">?default_text_color</item>
    </style>

    <style name="ProfileToolbarTextStyle">
        <item name="android:textColorLink">?link_color_contrast</item>
        <item name="android:textColor">?link_color_contrast</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">#4c000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">?cards_background</item>
    </style>

    <style name="ProfileCardTitleStyle">

    </style>

    <!--<style name="ButtonsOnWhite">
        <item name="colorControlNormal">#757575</item>
        <item name="colorControlActivated">@color/light_colorAccent</item>
    </style>-->


    <style name="ImageViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ImageViewTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:singleLine">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ImageViewTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
