<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Уведомления">
        <Preference
            android:key="open_notifications"
            android:title="Уведомления" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Общие">
        <SwitchPreference
            android:defaultValue="true"
            android:key="main.is_system_downloader"
            android:summary="Использовать системный загрузчик файлов"
            android:title="Системный загрузчик" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Внешний вид">
        <SwitchPreference
            android:defaultValue="false"
            android:key="main.theme.is_dark"
            android:title="Тёмная тема" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="main.show_notify_dot"
            android:title="Индикатор счетчиков" />

        <Preference
            android:key="main.webview.font_size"
            android:summary="Применяется для тем, поиска и чата"
            android:title="Размер шрифта" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="main.drawers.tab_stack_bottom"
            android:title="Вкладки снизу" />

    </PreferenceCategory>


    <PreferenceCategory android:title="Просмотр тем">
        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.show_avatars"
            android:title="Отображать аватарки" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.circle_avatars"
            android:title="Круглые аватарки" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.anchor_history"
            android:title="История переходов на странице"
            android:summary="Сохраняет историю переходов snapback"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Списки">
        <SwitchPreference
            android:defaultValue="false"
            android:key="lists.topic.unread_top"
            android:title="Непрочитанные сверху" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="lists.topic.show_dot"
            android:title="Индикатор новых сообщений" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Аккаунт">
        <Preference
            android:key="auth.action.logout"
            android:title="Выйти" />

    </PreferenceCategory>

    <PreferenceCategory android:title="О программе">
        <Preference
            android:key="about.check_update"
            android:title="Проверить обновления" />
        <Preference
            android:key="about.application"
            android:title="ForPDA" />

    </PreferenceCategory>

</PreferenceScreen>