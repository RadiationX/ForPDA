<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Общие">
        <SwitchPreference
            android:defaultValue="true"
            android:key="main.show_notify_dot"
            android:title="Индикатор счетчиков" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Темы">
        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.show_avatars"
            android:title="Отображать аватарки" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.circle_avatars"
            android:title="Круглые аватарки" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="theme.anchor_history"
            android:title="История переходов на странице" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Списки">
        <SwitchPreference
            android:defaultValue="false"
            android:key="lists.topic.unread_top"
            android:title="Непрочитанные сверху" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="lists.topic.show_dot"
            android:title="Индикатор новых сообщений" />
    </PreferenceCategory>

</PreferenceScreen>